<div class="container-fluid">

  <div class="container-fluid">
    <section class="container contenedor-login alingn-items-stretch col-lg-12">

      {{#if message}}
        <div
          class="alert alert-danger col-lg-4 text-center shadow"
          role="alert"
        >
          <p id="p_alert">{{message}}</p>
        </div>
      {{/if}}

      {{#if message_agregar}}
        <div class="alert alert-success col-lg-4 text-center" role="alert">
          <p id="p_alert">{{message_agregar}}</p>
        </div>
      {{/if}}

      {{#if dataCliente}}
        <form
          id="formulario_principal"
          class="nuevo_formulario shadow"
          action="/mdlModi"
          method="get"
        >

          <div class="form-group shadow-sm">

            <label for="nombre">DNI:</label>
            <input
              class="form-control"
              type="number"
              id="dni"
              name="dni"
              min="0"
              required
              value="{{dataCliente.dni}}"
            />
          </div>

          <div class="form-group shadow-sm">
            <label for="nombre">Nombre:</label>
            <input
              class="form-control"
              type="text"
              id="name"
              name="name"
              required
              value="{{dataCliente.nombre}}"
            />
          </div>
          <div class="form-group shadow-sm">
            <label for="nombre">Apelllido:</label>
            <input
              class="form-control"
              type="text"
              id="lastname"
              name="lastname"
              maxlength="100"
              required
              value="{{dataCliente.apellido}}"
            />
          </div>
          <div class="form-group shadow-sm">
            <label for="nombre">Domicilio:</label>
            <input
              class="form-control"
              type="text"
              id="domicilio"
              name="domicilio"
              required
              value="{{dataCliente.domicilio}}"
            />
          </div>
          <div class="form-group shadow-sm">
            <label for="nombre">Telefono:</label>
            <input
              class="form-control"
              type="text"
              id="telefono"
              name="telefono"
              required
              value="{{dataCliente.telefono}}"
            />
          </div>
          <div class="form-group shadow-sm">
            <label for="nombre">Usuario:</label>
            <input
              class="form-control"
              type="text"
              id="usuario"
              name="usuario"
              required
              value="{{dataCliente.usuario}}"
            />
          </div>

          <div class="form-group shadow-sm">
            <label for="nombre">Email:</label>
            <input
              class="form-control"
              type="email"
              id="email"
              name="email"
              required
              value="{{dataCliente.email}}"
            />
          </div>

          <button type="submit" class="mt-3 btn btn-primary">Modificar Datos</button>

        </form>

